<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
         <hibernate-mapping>
        	 <class name="entity.User" table="t_user"> 
        	 	<!-- 配置属性 -->
        	 	<id name="sid" column="sid">
        	 	<!-- 增长策略 -->
    	     	<generator class="native"></generator>  
     	 	</id>
        	 	<property name="sname"  column="sname"  ></property>   
        	 	<property name="ssex"  column="ssex" ></property>   
              	<property name="sword"  column="sword" ></property>     	 	      	 	
       	 	    <property name="sage"  column="sage" ></property>     	 	      	 	
        	 	<property name="srank"  column="srank" ></property>     
        	 	<property name="saddress" column="saddress"></property>	 	     
        	 </class>
</hibernate-mapping>